<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>motech</artifactId>
        <groupId>org.motechproject</groupId>
        <version>0.23-SNAPSHOT</version>
        <relativePath>../../</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>motech-dataservices-migration</artifactId>
    <version>0.23-SNAPSHOT</version>
    <packaging>bundle</packaging>
    <name>MOTECH Data Services Migration</name>
    <properties>
        <modules.root.dir>${basedir}/../..</modules.root.dir>
    </properties>
    <dependencies>
        <dependency>
            <groupId>com.googlecode.flyway</groupId>
            <artifactId>flyway-core</artifactId>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>motech-dataservices</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.4</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Fragment-Host>
                            com.googlecode.flyway.core;bundle-version=${flyway.version}
                        </Fragment-Host>
                        <!--
                            flyway-core does not see sql migration files inside motech-dataservices
                            bundle when it is run inside Felix framework. Probably the problem is
                            with searching files. The files are correctly located inside
                            motech-dataservices bundle however library tries to take files from
                            flyway-core. Embedding sql migration files inside
                            motech-dataservices-migration fragment bundle resolves the problem.
                            This module should be removed when problem will be solved inside
                            flyway-core.
                        -->
                        <Embed-Dependency>
                            motech-dataservices;inline=db/migration/*.sql
                        </Embed-Dependency>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-bundles</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${user.home}/.motech/bundles</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>target</directory>
                                    <includes>
                                        <include>*.jar</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
