<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd

        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:component-scan base-package="org.motechproject.server.pillreminder.api"/>
    <context:annotation-config/>


    <bean id="pillReminderSettings" class="org.motechproject.server.config.SettingsFacade" autowire="byType">
        <property name="moduleName" value="pillremainder"/>
    </bean>

    <bean id="pillReminderDbConnector" factory-bean="couchDbManager" factory-method="getConnector">
        <constructor-arg value="motech-pillreminder"/>
    </bean>


    <bean id="bundleWrapper" class="org.motechproject.osgi.web.BundleContextWrapper"/>

    <bean id="messagecampaignUIServiceTracker" class="org.motechproject.osgi.web.UIServiceTracker">
        <constructor-arg name="wrapper" ref="bundleWrapper"/>
        <constructor-arg name="moduleRegistrationData" ref="pillreminderRegistrationData"/>
    </bean>

    <bean id="pillreminderRegistrationData" class="org.motechproject.osgi.web.ModuleRegistrationData">
        <constructor-arg name="moduleName" value="pillreminder"/>
        <constructor-arg name="i18n">
            <map>
                <entry key="messages" value="../pillreminder/resource/messages/"/>
            </map>
        </constructor-arg>
    </bean>


</beans>