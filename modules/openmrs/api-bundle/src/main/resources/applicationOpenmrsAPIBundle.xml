    <osgi:service ref="openMRSPatientAdapter" interface="org.motechproject.mrs.services.MRSPatientAdapter"/>

    <osgi:service ref="openMRSRelationshipAdapter" interface="org.motechproject.openmrs.services.OpenMRSRelationshipAdapter"/>

    <osgi:service ref="openMRSEncounterAdapter" interface="org.motechproject.mrs.services.MRSEncounterAdapter"/>

    <osgi:service ref="implReqAdapter" interface="org.motechproject.mrs.services.MRSImplReqAdapter"/>

    <osgi:reference id="platformSettingsServiceOsgi" interface="org.motechproject.server.config.service.PlatformSettingsService" />

    <osgi:reference id="eventListenerRegistryServiceOsgi" interface="org.motechproject.event.listener.EventListenerRegistryService"/>

    <osgi:reference id="eventRelayOsgi" interface="org.motechproject.event.listener.EventRelay" />

