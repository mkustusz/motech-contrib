<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
       http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="org.motechproject.mdsgenerated"/>

    <mvc:annotation-driven/>

    <bean id="allEntities" class="org.motechproject.mds.repository.AllEntities" />

  #foreach ( $entry in $list )
  <bean id="$entry.get('name')Repository" class="$entry.get('repository')" />

  <bean id="$entry.get('name')Service" class="$entry.get('service')">
    <property name="repository">
        <bean class="$entry.get('repository')" />
    </property>
  </bean>
  #end
</beans>