{
    "outgoing":{
        "request":{
            "urlPath":"http://smshost.com/sms/send",
            "type":"POST",
            "recipientsSeparator":"+",
            "bodyParameters":{
                "recipients":"$recipients",
                "message":"$message"
            },
            "authentication":{
                "username":"username",
                "password":"password"
            }
        },
        "response":{
            "success":".*(<status>success</status>).*"
        }
    },
    "incoming":{
        "messageKey":"message",
        "senderKey":"sender",
        "timestampKey":"sent_at"
    }
}
