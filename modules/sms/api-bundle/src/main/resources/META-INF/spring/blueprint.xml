<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd

       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">


    <context:annotation-config/>

    <bean id="header" class="org.motechproject.sms.api.osgi.PageHeader"></bean>

    <bean id="bundleWrapper" class="org.motechproject.osgi.web.BundleContextWrapper"/>

    <bean id="smsUIServiceTracker" class="org.motechproject.osgi.web.UIServiceTracker">
        <constructor-arg name="wrapper" ref="bundleWrapper"/>
        <constructor-arg name="moduleRegistrationData" ref="smsModularRegistrationData"/>
    </bean>

    <bean id="smsModularRegistrationData" class="org.motechproject.osgi.web.ModuleRegistrationData">
        <constructor-arg name="url" value="../sms/resource/index.html"/>
        <constructor-arg name="moduleName" value="SMS"/>
        <constructor-arg name="angularModules">
            <list>
                <value>motech-sms</value>
            </list>
        </constructor-arg>
        <constructor-arg name="i18n">
            <map>
                <entry key="messages" value="../sms/resource/bundles/"/>
            </map>
        </constructor-arg>
        <constructor-arg name="header" ref="header"/>
    </bean>


</beans>