<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>motech</artifactId>
        <groupId>org.motechproject</groupId>
        <version>0.12-SNAPSHOT</version>
        <relativePath>../</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.motechproject</groupId>
    <artifactId>motech-deployment-tests</artifactId>
    <version>0.12-SNAPSHOT</version>
    <name>MoTeCH Deployment Tests</name>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.9</version>
        </dependency>
    </dependencies>

    <properties>
        <modules.root.dir>${basedir}/..</modules.root.dir>
        <tomcat.port>9090</tomcat.port>
        <tomcat.port.shutdown>9005</tomcat.port.shutdown>
    </properties>

    <profiles>
        <profile>
            <id>IT</id>

            <build>
                <defaultGoal>integration-test</defaultGoal>

                <plugins>
                    <!--PROPERTIES READ-->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>properties-maven-plugin</artifactId>
                        <version>1.0-alpha-2</version>
                        <executions>
                            <execution>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>read-project-properties</goal>
                                </goals>
                                <configuration>
                                    <files>
                                        <file>${modules.root.dir}/maven.properties</file>
                                    </files>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>sql-maven-plugin</artifactId>
                        <version>1.5</version>
                        <dependencies>
                            <dependency>
                                <groupId>mysql</groupId>
                                <artifactId>mysql-connector-java</artifactId>
                                <version>5.1.13</version>
                            </dependency>
                        </dependencies>
                        <configuration>
                            <driver>com.mysql.jdbc.Driver</driver>
                            <username>${mysql.user}</username>
                            <password>${mysql.password}</password>
                            <url>jdbc:mysql://localhost:3306</url>
                        </configuration>
                        <executions>
                            <!--
                                 Problem with openmrs-api:
                                 property_value for module_repository_folder entry in global_property table must be
                                 changed to an absolute path to folder with omod modules because modules folder exists
                                 in main repository folder and openmrs tries to load omod modules from this folder.
                            -->
                            <execution>
                                <id>change-property-value</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <autocommit>true</autocommit>
                                    <sqlCommand>
                                        USE motech_openmrs_api;

                                        UPDATE global_property
                                        SET property_value='${user.home}/.motech/config/org.motechproject.motech-openmrs-api-bundle/openmrs-data/modules'
                                        WHERE property LIKE 'module_repository_folder';
                                    </sqlCommand>
                                </configuration>
                            </execution>
                            <!-- Back to old value for module_repository_folder entry -->
                            <execution>
                                <id>revert-property-value</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <autocommit>true</autocommit>
                                    <sqlCommand>
                                        USE motech_openmrs_api;

                                        UPDATE global_property
                                        SET property_value='modules'
                                        WHERE property LIKE 'module_repository_folder';
                                    </sqlCommand>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <version>2.9</version>
                        <configuration>
                            <encoding>UTF-8</encoding>
                            <failIfNoTests>false</failIfNoTests>
                        </configuration>
                        <executions>
                            <execution>
                                <id>integration-test</id>
                                <goals>
                                    <goal>integration-test</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>verify</id>
                                <goals>
                                    <goal>verify</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>com.googlecode.t7mp</groupId>
                        <artifactId>maven-t7-plugin</artifactId>
                        <version>0.9.10.M5</version>
                        <configuration>
                            <tomcatHttpPort>${tomcat.port}</tomcatHttpPort>
                            <tomcatShutdownPort>${tomcat.port.shutdown}</tomcatShutdownPort>
                            <tomcatShutdownCommand>SHUTDOWN</tomcatShutdownCommand>
                            <tomcatSetAwait>false</tomcatSetAwait>
                            <tomcatVersion>7.0.27</tomcatVersion>
                            <lookInside>false</lookInside>
                            <webapps>
                                <webappArtifact>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>motech-platform-server</artifactId>
                                    <version>${project.version}</version>
                                    <contextPath>motech-platform-server</contextPath>
                                </webappArtifact>
                            </webapps>
                        </configuration>
                        <executions>
                            <execution>
                                <id>tomcat-start</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <phase>pre-integration-test</phase>
                            </execution>
                            <execution>
                                <id>tomcat-stop</id>
                                <goals>
                                    <goal>stop</goal>
                                </goals>
                                <phase>post-integration-test</phase>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
