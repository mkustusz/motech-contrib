<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <util:properties id="postgresProperties" location="classpath:postgres.properties"/>
    <util:properties id="couchdbProperties" location="classpath:couchdb.properties"/>

    <import resource="classpath:applicationContext-Diagnostics-Couch.xml"/>
    <import resource="classpath:applicationContext-Diagnostics-Queues.xml"/>
    <import resource="classpath:applicationContext-Diagnostics-Postgres.xml"/>
    <import resource="classpath:applicationContext-Diagnostics-Configuration.xml"/>

    <util:map id="configurationFilesMap">
        <entry key="activemq"><util:properties location="classpath:activemq.properties"/></entry>
        <entry key="postgres"><util:properties location="classpath:postgres.properties"/></entry>
        <entry key="couchdb"><util:properties location="classpath:couchdb.properties"/></entry>
    </util:map>

    <util:list id="couchDatabasesList">
        <value>_users</value>
        <value>unknown-database</value>
    </util:list>

</beans>
