<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd"
       xmlns:context="http://www.springframework.org/schema/context">

    <import resource="classpath:applicationContext-Diagnostics-Common.xml"/>

    <context:property-placeholder location="classpath*:*.properties"/>

    <bean id="activeMQDiagnosticsConnectionFactory" class="org.springframework.jms.connection.CachingConnectionFactory">
        <property name="targetConnectionFactory">
            <bean class="org.apache.activemq.ActiveMQConnectionFactory">
                <property name="brokerURL" value="${broker.url}"/>
                <property name="redeliveryPolicy.maximumRedeliveries" value="${maximumRedeliveries}"/>
                <property name="redeliveryPolicy.initialRedeliveryDelay" value="${redeliveryDelayInMillis}"/>
                <property name="redeliveryPolicy.redeliveryDelay" value="${redeliveryDelayInMillis}"/>
            </bean>
        </property>
        <property name="sessionCacheSize" value="10"/>
        <property name="cacheProducers" value="false"/>
    </bean>

    <bean class="org.motechproject.diagnostics.diagnostics.ActiveMQDiagnostic" />
  </beans>