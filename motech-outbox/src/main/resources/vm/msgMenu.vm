<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1" xmlns="http://www.w3.org/2001/vxml">
    <menu>
      <property name="inputmodes" value="dtmf"/>
      <prompt>
          #if($canBeReplayed)
              To listen this message again press 1,
          #end
          #if($canBeSaved)
              to save this message press 2
          #end
          to go to the next message press 3
      </prompt>
        #if($canBeReplayed)
            <choice dtmf="1" next="$contextPath/outbox/vxml/outboxMessage?mId=$messageId"/>
        #end
        #if($canBeSaved)
            <choice dtmf="2" next="$contextPath/outbox/vxml/save?mId=$messageId"/>
        #end
        <choice dtmf="3" next="$contextPath/outbox/vxml/outboxMessage"/>
    </menu>
</vxml>