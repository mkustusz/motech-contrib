<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="org.motechproject.server.pillreminder" />

    <bean id="motechContext" class="org.motechproject.context.Context" factory-method="getInstance"/>
    <bean id="couchDbInstancePillReminder" factory-bean="motechContext" factory-method="getCouchDbInstance"/>

    <bean id="pillReminderDatabase" class="org.ektorp.impl.StdCouchDbConnector">
        <constructor-arg value="motech-pillreminder"/>
        <constructor-arg ref="couchDbInstancePillReminder"/>
    </bean>

    <!--<bean id="controllerClassNameUrlMapping"-->
          <!--class="org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping">-->
    <!--</bean>-->

    <bean class="org.springframework.web.servlet.view.BeanNameViewResolver" />

    <bean id="jaxbView" class="org.springframework.web.servlet.view.xml.MarshallingView">
        <constructor-arg ref="jaxbMarshaller" />
    </bean>

    <bean id="allPillRegimens" class="org.motechproject.server.pillreminder.dao.AllPillRegimens" >
        <constructor-arg ref="pillReminderDatabase"/>
    </bean>

    <bean id="schedulerService" class="org.motechproject.scheduler.MotechSchedulerServiceImpl"/>

    <bean id="pillReminderServiceImpl" class="org.motechproject.server.pillreminder.service.PillReminderServiceImpl">
        <constructor-arg ref ="allPillRegimens"/>
        <constructor-arg ref="schedulerService"/>
    </bean>

    <bean id="jaxbMarshaller" class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
        <property name="classesToBeBound">
            <list>
                <value>org.motechproject.server.pillreminder.contract.PillRegimenRequest</value>
                <value>org.motechproject.server.pillreminder.contract.DosageRequest</value>
            </list>
        </property>
     </bean>
</beans>
