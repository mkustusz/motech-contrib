<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <context:component-scan base-package="org.motechproject.ivr.kookoo"/>
    <context:component-scan base-package="org.motechproject.server.service.ivr"/>

    <import resource="ivrKookooRepositories.xml"/>

    <bean id="actions" class="org.motechproject.ivr.kookoo.action.Actions">
        <constructor-arg>
            <map>
                <entry key="newcall" value-ref="newCallEventAction"/>
                <entry key="gotdtmf" value-ref="dtmfEventAction"/>
                <entry key="disconnect" value-ref="disconnectEventAction"/>
                <entry key="hangup" value-ref="hangupEventAction"/>
            </map>
        </constructor-arg>
    </bean>
</beans>