<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:security="http://www.springframework.org/schema/security"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.0.xsd">

    <security:http auto-config='false' use-expressions="true" entry-point-ref="motechAuthenticationEntryPoint">
        <security:intercept-url pattern="/**" access="isAuthenticated()"/>
        <security:custom-filter ref="motechAuthenticationFilter" position="FORM_LOGIN_FILTER"/>
    </security:http>

    <bean id="motechAuthenticationEntryPoint"
          class="org.springframework.security.web.authentication.LoginUrlAuthenticationEntryPoint">
        <property name="loginFormUrl" value="/auth/login/home" />
    </bean>

    <bean id="motechAuthenticationFilter"
          class="org.springframework.security.web.authentication.UsernamePasswordAuthenticationFilter">
        <property name="authenticationManager" ref="motechAuthenticationManager"/>
        <property name="authenticationSuccessHandler" ref="motechAuthenticationSuccessHandler" />
    </bean>

    <bean id="motechAuthenticationSuccessHandler" class="org.motechproject.security.authentication.LoginSuccessHandler">
        <property name="alwaysUseDefaultTargetUrl" value="true" />
        <property name="defaultTargetUrl" value="/auth/login/success" />
    </bean>

    <security:authentication-manager alias="motechAuthenticationManager">
        <security:authentication-provider ref="motechAuthenticationProvider"/>
    </security:authentication-manager>

    <bean id="motechAuthenticationProvider"
          class="org.motechproject.security.authentication.MotechAuthenticationProvider"/>

</beans>