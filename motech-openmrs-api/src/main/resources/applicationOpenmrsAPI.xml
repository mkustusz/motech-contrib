<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="context" class="org.motechproject.openmrs.Context" init-method="initialize">
        <constructor-arg value="jdbc:mysql://${openmrs.host}:3306/${openmrs.database}?autoReconnect=true"/>
        <constructor-arg value="${openmrs.db.username}"/>
        <constructor-arg value="${openmrs.db.password}"/>
        <constructor-arg value="${openmrs.admin.username}"/>
        <constructor-arg value="${openmrs.admin.password}"/>
    </bean>

    <bean id="serviceContext"  class="org.openmrs.api.context.ServiceContext"  factory-bean="context" factory-method="getServiceContext"/>

    <bean class="org.openmrs.api.PatientService" factory-bean="serviceContext" factory-method="getPatientService"/>
    <bean class="org.openmrs.api.PersonService" factory-bean="serviceContext" factory-method="getPersonService"/>
    <bean class="org.openmrs.api.UserService" factory-bean="serviceContext" factory-method="getUserService"/>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:openmrs.properties"/>
    </bean>

</beans>