<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="org.motechproject.server.startup"/>

    <import resource="classpath:applicationPlatformConfig.xml"/>

    <bean id="configFileListener" class="org.motechproject.server.startup.ConfigFileListener"/>

    <bean id="startupManager" class="org.motechproject.server.startup.StartupManager" factory-method="getInstance">
        <property name="configFileListener" ref="configFileListener"/>
    </bean>



</beans>
