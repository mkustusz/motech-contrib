</div>
<br>
<br>

<div id="search-section" class="well">
    <form action="caselogs/filter" id="filter-case-logs-form" autocomplete="off" input method="POST"
          submitOnEnterKey="true"
          class="form-horizontal">
        <div id="search-pane" class="row-fluid">
            <div class="control-group span3">
                <label class="control-label">Entity ID</label>

                <div class="controls">
                    <input id="entityId" name="entityId" type="text"/>
                </div>
            </div>

            <div class="control-group span5">
                <label class="control-label">Request Type</label>

                <div class="controls">
                    <input class="input-large" type="text" name='requestType' id="requestType"/>

                    <button type="submit" id="filter" class="btn btn-primary">Filter <i
                            class="icon-filter icon-white"></i>
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>
